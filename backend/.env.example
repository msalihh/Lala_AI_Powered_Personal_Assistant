# HACE Backend Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# REQUIRED - Application will not work without these
# ===========================================

# OpenRouter API Key for LLM and Embeddings
# Get your key from https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# MongoDB Connection URI
# For local: mongodb://localhost:27017
# For Atlas: mongodb+srv://<user>:<password>@cluster.mongodb.net/
MONGODB_URI=mongodb://localhost:27017

# MongoDB Database Name
MONGODB_DB=hace

# ===========================================
# SECURITY - Change in production!
# ===========================================

# JWT Secret Key - Generate a strong random key for production
# Example: openssl rand -hex 32
SECRET_KEY=your-strong-secret-key-change-in-production

# Google OAuth Client ID (for Google Sign-In)
# Get from https://console.cloud.google.com/
# This MUST match the GOOGLE_CLIENT_ID in frontend/.env.local
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# ===========================================
# OPTIONAL - Development defaults are used if not set
# ===========================================

# Environment: "development" or "production"
ENVIRONMENT=development

# CORS Origins (comma-separated)
# Default: http://localhost:3000,http://localhost:3003
CORS_ORIGINS=http://localhost:3000,http://localhost:3003

# Logging Level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable Rate Limiting (automatically enabled in production)
ENABLE_RATE_LIMIT=false

# ===========================================
# RAG Configuration
# ===========================================

# Number of top results to retrieve
RAG_TOP_K=4

# Minimum score threshold for relevance
RAG_SCORE_THRESHOLD=0.25

# Context window settings
CONTEXT_MAX_TOKENS=2000
CONTEXT_HARD_LIMIT=50

# OpenRouter Model (for chat completions)
OPENROUTER_MODEL=openai/gpt-4o-mini
